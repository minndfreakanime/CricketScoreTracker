<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cricketbackground"
    tools:context="com.example.android.cricketscoretracker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#000"
                android:fontFamily="monospace"
                android:textStyle="italic"
                android:text="Team A"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="44sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0/0"
                android:id="@+id/team_a_score"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+1 RUN"
                android:onClick="add_one_Run_To_TeamA"
                android:background="@drawable/button_background"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+2 RUNS"
                android:onClick="add_two_Runs_To_TeamA"
                android:background="@drawable/button_background"
                android:textColor="#FF3D00"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+3 RUNS"
                android:onClick="add_three_Runs_To_TeamA"
                android:background="@drawable/button_background"
                android:textColor="#64DD17"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+4 RUNS"
                android:onClick="add_four_Runs_To_TeamA"
                android:background="@drawable/button_background"
                android:textColor="#9C27B0"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+6 RUNS"
                android:onClick="add_six_Runs_To_TeamA"
                android:background="@drawable/button_background"
                android:textColor="#EF9A9A"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wide"
                    android:id="@+id/wide1"
                    android:onClick="add_one_Run_To_TeamA"
                    android:background="@drawable/button_background"
                    android:textColor="#E8EAF6"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No ball"
                    android:layout_toRightOf="@id/wide1"
                    android:id="@+id/no_ball1"
                    android:onClick="add_one_Run_To_TeamA"
                    android:background="@drawable/button_background"
                    android:textColor="#E8EAF6"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wicket"
                    android:layout_below="@id/no_ball1"
                    android:layout_centerInParent="true"
                    android:id="@+id/wicket1"
                    android:onClick="add_one_Wicket_To_TeamA"
                    android:background="@drawable/button_background"
                    android:textColor="#FFCC80"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginVertical="5dp"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#000"
                android:fontFamily="monospace"
                android:text="Team B"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="44sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0/0"
                android:id="@+id/team_b_score"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+1 RUN"
                android:onClick="add_one_Run_To_TeamB"
                android:background="@drawable/button_background"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+2 RUNS"
                android:onClick="add_two_Runs_To_TeamB"
                android:background="@drawable/button_background"
                android:textColor="#FF3D00"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+3 RUNS"
                android:onClick="add_three_Runs_To_TeamB"
                android:background="@drawable/button_background"
                android:textColor="#64DD17"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+4 RUNS"
                android:onClick="add_four_Runs_To_TeamB"
                android:background="@drawable/button_background"
                android:textColor="#9C27B0"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+6 RUNS"
                android:onClick="add_six_Runs_To_TeamB"
                android:background="@drawable/button_background"
                android:textColor="#EF9A9A"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wide"
                    android:id="@+id/wide2"
                    android:onClick="add_one_Run_To_TeamB"
                    android:background="@drawable/button_background"
                    android:textColor="#E8EAF6"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No ball"
                    android:layout_toRightOf="@id/wide2"
                    android:id="@+id/no_ball2"
                    android:onClick="add_one_Run_To_TeamB"
                    android:background="@drawable/button_background"
                    android:textColor="#E8EAF6"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wicket"
                    android:layout_below="@id/no_ball2"
                    android:layout_centerInParent="true"
                    android:id="@+id/wicket2"
                    android:onClick="add_one_Wicket_To_TeamB"
                    android:background="@drawable/button_background"
                    android:textColor="#FFCC80"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginVertical="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_gravity="center"
        android:onClick="reset"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_background"/>

</LinearLayout>
